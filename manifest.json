{
  "manifest_version": 3,
  "name": "Sovereign Scroll",
  "version": "1.1.0",
  "description": "Hide Substack Notes containing specific words or phrases",
  "permissions": ["storage"],
  "host_permissions": [
    "https://substack.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://substack.com/*"
      ],
      "js": ["filter.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}

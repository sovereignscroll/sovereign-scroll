{
  "manifest_version": 3,
  "name": "Sovereign Scroll",
  "version": "1.1.0",
  "description": "Hide posts containing specific words or phrases on Substack, Instagram, Facebook, and X",
  "permissions": ["storage"],
  "host_permissions": [
    "https://substack.com/*",
    "https://*.instagram.com/*",
    "https://*.facebook.com/*",
    "https://*.x.com/*",
    "https://*.twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://substack.com/*",
        "https://*.instagram.com/*",
        "https://*.facebook.com/*",
        "https://*.x.com/*",
        "https://*.twitter.com/*"
      ],
      "js": ["filter.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
